<p id="notice"><%= notice %></p>

<h1>Listing Assignment Grades</h1>

<table>
  <thead>
    <tr>
      <th>Assignment name</th>
      <th>Grade</th>
      <th>Student</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignment_grades.each do |assignment_grade| %>
      <tr>
        <td><%= assignment_grade.assignment_name %></td>
        <td><%= assignment_grade.grade %></td>
        <td><%= assignment_grade.student_id %></td>
        <td><%= link_to 'Show', assignment_grade %></td>
        <td><%= link_to 'Edit', edit_assignment_grade_path(assignment_grade) %></td>
        <td><%= link_to 'Destroy', assignment_grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

